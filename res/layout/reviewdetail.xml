<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     <TextView
         android:layout_centerHorizontal="true"
         android:id="@+id/rtmlogo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:text="@string/rottentomatoes"
         android:textColor="#330000"
         android:lineSpacingMultiplier="1.3"
     	 /> 
     	 <RelativeLayout
     	     android:layout_width="wrap_content"
     	     android:layout_height="wrap_content"
     	     android:id="@+id/ratingwindow"
     	     android:layout_below="@id/rtmlogo"
     	     android:layout_marginLeft="15dp"
     	     android:layout_marginRight="15dp"
			 android:layout_centerHorizontal="true"
     	     >
     	     <ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/criticlogo"
    android:layout_alignParentLeft="true"
    />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:id="@+id/criticscore"
         android:gravity="center"
         android:layout_toRightOf="@id/criticlogo"
         />
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/audlogo"
    android:layout_toRightOf="@id/criticscore"
    />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:id="@+id/audscore"
          android:gravity="center"
         android:layout_toRightOf="@id/audlogo"
         />    
     	     
     	 </RelativeLayout>
     	         
        <TextView
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:id="@+id/thereviewsynop"
        	android:textSize="@dimen/thereviewconsensussize"
        	android:textStyle="italic"
        	android:paddingLeft="4dp"
        	android:gravity="fill_horizontal"
        	android:layout_centerHorizontal="true"
        	android:textColor="#330000"
        	android:lineSpacingMultiplier="1.3"
        	android:visibility="gone"
        	android:layout_below="@id/ratingwindow"
        	
        	
        	            ></TextView>
        
        <ListView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thereviewlist"
            android:layout_marginTop="10dp"
            android:layout_below="@id/thereviewsynop"
            android:divider="#330000"
            android:dividerHeight="1dp"
            ></ListView>
        
        
    
   
         
         
  
       <ProgressBar 
			android:id="@+id/progressBarreview"	
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:visibility="gone"
			 android:indeterminate="true"
			
		/>
     
    
     
 
</RelativeLayout>
