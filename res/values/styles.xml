<resources>

    <!--<style name="AppTheme" parent="android:Theme.Holo" /> --> 
	<style name="AppTheme" parent="android:Theme.Light"/>
	<style name="NoTitleTheme" parent="android:Theme.Light">
		
	    
	    
	</style>
	
	<style name="Theme.Moviestyleactionbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_moviestyleactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Moviestyleactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Moviestyleactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Moviestyleactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Moviestyleactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Moviestyleactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_moviestyleactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_moviestyleactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Moviestyleactionbar</item>
        <item name="@android:attr/actionBarTabTextStyle">@style/TabStyle</item>
        
        
    </style>

    <style name="ActionBar.Solid.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_moviestyleactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_moviestyleactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_moviestyleactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Moviestyleactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_moviestyleactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Moviestyleactionbar</item>
    </style>

    <style name="PopupMenu.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_moviestyleactionbar</item>	
    </style>

    <style name="DropDownListView.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_moviestyleactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_moviestyleactionbar</item>
    </style>

    <style name="DropDownNav.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_moviestyleactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_moviestyleactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_moviestyleactionbar</item>
    </style>
    
    <style name="ProgressBar.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_moviestyleactionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Moviestyleactionbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_moviestyleactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Moviestyleactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Moviestyleactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Moviestyleactionbar</item>
    </style>
    
    <style name="TabSpecialTheme" parent="android:Theme.Holo.Light.DarkActionBar">
      <item name="@android:attr/actionBarTabTextStyle">@style/TabStyle</item>
</style>

<!-- Modify the text color -->
<style name="TabStyle" parent="android:Widget.Holo.Light.ActionBar.TabText.Inverse">
      <item name="android:textColor">#FFFFFF</item>
</style>
	     
</resources>